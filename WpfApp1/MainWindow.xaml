<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="ListView1" Margin="10,10,10,42" SelectionChanged="ListView_SelectionChanged" ItemsSource="{Binding Source={StaticResource employees_list}}">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel HorizontalAlignment="Right" Height="27" Margin="0,10,10,10" VerticalAlignment="Bottom" Width="244">
            <Button x:Name="RemoveItemButton" Content="Remove First" Width="75" Cursor="AppStarting" Click="RemoveItemButton_Click" VerticalAlignment="Bottom" Margin="0,5" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
